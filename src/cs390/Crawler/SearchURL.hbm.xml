<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="cs390.Crawler.searchURL" table="search_url">
        <meta attribute="class-description">
            This class contains the searchURL detail.
        </meta>
        <id name="URLID" type="int" column="urlid"></id>
        <property name="URL" column="url" type="string"/>
        <property name="Description" column="description" type="string"/>

    </class>


    <class name="cs390.Crawler.searchResult" table="search_result">
        <meta attribute="class-description">
            This class contains the searchURL detail.
        </meta>
        <id name="URLID" type="int" column="urlid">
        </id>
        <map name="hm_result" cascade="all">
            <key column="word"/>
            <index column="count" type="int"/>
            <one-to-many class="cs390.Crawler.searchResultWord"/>
        </map>
    </class>

    <class name="cs390.Crawler.searchResultWord" table="search_result_word">
        <meta attribute="class-description">
            This class contains the searchURL detail.
        </meta>
        <id name="word" type="java.lang.String" column="WordID">
        </id>
    </class>
</hibernate-mapping>